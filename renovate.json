{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "automerge": true,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false
    }
  ],
  "schedule": ["after 10pm and before 5am every weekend"],
  "timezone": "Asia/Tokyo"
}
